@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; } = default!;

    private string? userId;
    private bool isLoading = true;
    private string? loadError;
    private bool hasCalculated = false;

    private decimal baseSalary;
    private decimal BaseSalary
    {
        get => baseSalary;
        set
        {
            if (baseSalary != value)
            {
                baseSalary = value;
            }
        }
    }

    private decimal taxPercentage;
    private decimal TaxPercentage
    {
        get => taxPercentage;
        set
        {
            if (taxPercentage != value)
            {
                taxPercentage = value;
            }
        }
    }

    private List<BonusHoursInput> BonusHoursInputs { get; } = new();
    private string calculationPeriod = "monthly";

    private decimal TotalBonusPay => BonusHoursInputs.Sum(b => b.CalculatedAmount);
    private decimal GrossSalary => BaseSalary + TotalBonusPay;
    private decimal TaxAmount => GrossSalary * (TaxPercentage / 100m);
    private decimal NetSalary => GrossSalary - TaxAmount;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateTask;
        var principal = authState.User;

        userId = principal.FindFirst("UserId")?.Value ?? principal.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (string.IsNullOrEmpty(userId))
        {
            loadError = "Unable to determine the current user.";
            isLoading = false;
            return;
        }

        try
        {
            var data = await UserDataService.GetOrCreateForUserAsync(userId);
            baseSalary = data.BaseSalary;
            taxPercentage = data.TaxPercentage;

            BonusHoursInputs.Clear();
            if (data.Bonuses is not null)
            {
                foreach (var bonus in data.Bonuses.Where(b => b.IsActive))
                {
                    BonusHoursInputs.Add(new BonusHoursInput
                    {
                        Category = bonus.Category,
                        HourlyRate = bonus.Amount,
                        HoursWorked = 0
                    });
                }
            }

            loadError = null;
        }
        catch (Exception ex)
        {
            loadError = $"Failed to load your salary data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void Calculate()
    {
        hasCalculated = true;
        StateHasChanged();
    }

    private void HandleMonthlyChange()
    {
        if (calculationPeriod != "monthly")
        {
            calculationPeriod = "monthly";
            if (baseSalary > 0)
            {
                baseSalary /= 12;
            }
            hasCalculated = false;
            StateHasChanged();
        }
    }

    private void HandleYearlyChange()
    {
        if (calculationPeriod != "yearly")
        {
            calculationPeriod = "yearly";
            baseSalary *= 12;
            hasCalculated = false;
            StateHasChanged();
        }
    }

    private class BonusHoursInput
    {
        public string Category { get; set; } = string.Empty;
        public decimal HourlyRate { get; set; }

        private decimal hoursWorked;
        public decimal HoursWorked
        {
            get => hoursWorked;
            set
            {
                hoursWorked = value;
                CalculatedAmount = hoursWorked * HourlyRate;
            }
        }

        public decimal CalculatedAmount { get; private set; }
    }
}