@page "/calculator"
@attribute [Authorize]

<section class="salary-card">
    <h1>Salary Calculator</h1>
    <p class="lead">Quickly calculate your gross and net salary based on hourly rate, hours worked, and tax percentage.</p>

	<div class="form-group-frame">
        <div class="form-group">
            <label>Hours Worked</label>
            <input type="number" @bind="HoursWorked" step="0.1" class="form-input" />
        </div>
    </div>

    <button class="primary" @onclick="CalculateSalary">Calculate</button>

    @if (Calculated)
    {
        <div class="result">
            <h3>Results</h3>
            <p><strong>Gross Salary:</strong> €@GrossSalary</p>
            <p><strong>Net Salary (after tax):</strong> €@NetSalary</p>
        </div>
    }
</section>

<style>
    .salary-card {
        width: 60vw;
        margin: 1rem auto;
        background: #ffffff;
        padding: 2rem 4rem;
        border-radius: 20px;
        box-shadow: 0 18px 36px rgba(15, 23, 42, 0.12);
        display: flex;
        flex-direction: column;
        align-items: stretch;
        justify-content: flex-start;
    }

        .salary-card h1 {
            margin: 0 0 0.75rem;
            color: #1f2937;
            text-decoration: underline 2px rgb(141, 168, 145, 0.5);
            text-underline-offset: 0.5rem;
        }

        .salary-card .lead {
            margin: 0 0 1rem;
            color: #4b5563;
        }

    .form-group-frame {
        width: calc(100% + 8rem);
        position: relative;
        left: -4rem;
        padding: 2rem 0rem;
		display: flex;
		flex-direction: column;
        justify-content: center;
		align-items: center;
        box-shadow: 0 14px 2px 0 white inset, 0 -14px 2px 0 white inset, 10px 0 15px -4px #8da891 inset, -10px 0 15px -4px #8da891 inset;
    }

    .form-group {
        margin: 0.5rem 1rem 0.5rem 1rem;
        width: 40rem;
    }

    .form-group label {
            
            display: block;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 0.35rem;
		}

    .form-input {
        width: stretch;
        padding: 0.65rem 0.75rem;
        border: 1px solid #d1d5db;
        border-radius: 10px;
        font-size: 0.95rem;
        background: #f9fafb;
    }

    .primary {
        width: fit-content;
        margin-top: 1rem;
        background: linear-gradient(135deg, #298353, #182848);
        color: #fff;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1rem;
		align-self: center;
    }

        .primary:hover {
            background: rgb(29, 104, 64, 0.5);
        }

    .result {
        margin-top: 2rem;
        text-align: left;
        background: #f9fafb;
        padding: 1rem;
        border-radius: 12px;
    }

        .result h3 {
            margin-bottom: 0.5rem;
        }
</style>

@code {
    private decimal HoursWorked { get; set; }
    private decimal GrossSalary { get; set; }
    private decimal NetSalary { get; set; }
    private bool Calculated { get; set; }

    private void CalculateSalary()
    {

    }
}
